<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_payment_form_inherit" model="ir.ui.view">
            <field name="name">account_payment_form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_bank_id']" position="before">
                    <field name="check_number"/>
                </xpath>
            </field>
        </record>

        <record id="account_payment_view_inherit" model="ir.ui.view">
            <field name="name">account_payment_view</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="before">
                    <field name="check_number"/>
                </xpath>
            </field>
        </record>
        <record id="view_check_number_search" model="ir.ui.view">
            <field name="name">account.payment.check.number.search</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_search"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <field name="check_number"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>